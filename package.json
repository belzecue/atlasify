{
  "name": "atlasify",
  "version": "0.1.0",
  "description": "CLI and core module for atlasify texture packer using maxrects-packer & Jimp",
  "main": "lib/atlasify.js",
  "types": "lib/types/atlasify.d.ts",
  "bin": "bin/cli.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "clean": "rimraf ./lib && rimraf ./dist && rimraf ./test/*.png",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "test": "cd ./test && node --inspect-brk=9229 ../bin/cli.js -astr -p 2 -m 1024,1024 --debug --extrude 1 --trim 64 --save ./atlas && open ./*.png",
    "commit": "npx git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://soimy@github.com/soimy/atlasify.git"
  },
  "keywords": [
    "atlas",
    "atlasify",
    "sprite",
    "spritesheet",
    "bin",
    "pack",
    "packer",
    "maxrect",
    "rect"
  ],
  "author": "YM Shen <soimy@163.com> (http://github.com/soimy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soimy/atlasify/issues"
  },
  "homepage": "https://github.com/soimy/atlasify#readme",
  "devDependencies": {
    "@types/mustache": "^0.8.32",
    "@types/node": "^12.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.2.0",
    "tslib": "^1.9.3",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "jimp": "^0.6.4",
    "maxrects-packer": "^2.3.0",
    "mustache": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
